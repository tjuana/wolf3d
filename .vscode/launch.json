	"version": "0.2.0",
	"configurations": [
		{
			"name": "gcc build and debug active file",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/wolf3d",
			"args": ["${workspaceRoot}/maps/map.txt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			//"preLaunchTask": "gcc build active file"
		},
		{
			"name": "debug new map",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/wolf3d",
			//"args": ["${workspaceRoot}/maps/map.txt"],
			"args": ["${workspaceRoot}/maps/new_template.nnmp", "nmp"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			//"preLaunchTask": "gcc build active file"
		},
		{
			"name": "debug editor",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/map_editor",
			//"args": ["${workspaceRoot}/maps/map.txt"],
			"args": ["${workspaceRoot}/maps/new_template.nnmp", "nmp"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			//"preLaunchTask": "gcc build active file"
		}
	]
}
